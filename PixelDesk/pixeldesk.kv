Manager:
    Main:
        name: 'main'
    Config:
        name: 'config'

<ClockBox@GridLayout>:
    cols: 2
    PixelLabel:
        text: app.CLOCK
        font_size: '30sp'
        color: app.FONT_COLOR
    PixelLabel:
        text: app.DATE
        font_size: '30sp'
        color: app.FONT_COLOR

<WeatherBox@GridLayout>:
    cols: 1
    GridLayout:
        cols: 1
        GridLayout:
            cols: 2
            size_hint_y: None
            height: 35
            PixelLabel:
                text: f'Temp = {str(app.TEMPERATURE)}'''
                font_size: '30sp'
                color: app.FONT_COLOR
            PixelLabel:
                text: f'Feels Like = {str(app.FEELS_LIKE)}'''
                font_size: '30sp'
                color: app.FONT_COLOR
        GridLayout:
            cols: 2
            size_hint_y: None
            height: 35
            PixelLabel:
                text: f'Humidity = {str(app.HUMIDITY)}%'
                font_size: '30sp'
                color: app.FONT_COLOR
            PixelLabel:
                text: f'Weather = {str(app.WEATHER_DESC)}'
                font_size: '30sp'
                color: app.FONT_COLOR
        GridLayout:
            cols: 1
            PixelAsyncImage:
                source: app.WEATHER_ICON
                size_hint: 1, 1

<BottomBox@GridLayout>:
    cols: 1
    GridLayout:
        cols: 3
        size_hint_y: None
        height: 10
        PixelImage:
            source: 'images/Box_TL.png'
            size_hint: None, None
        PixelImage:
            source: 'images/Box_T.png'
            size_hint: 1, None
            keep_ratio: False
        PixelImage:
            source: 'images/Box_TR.png'
            size_hint: None, None
    GridLayout:
        cols: 3
        PixelImage:
            source: 'images/Box_S.png'
            size_hint: None, 1
            keep_ratio: False
        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, 1
            PixelLabel:
                text: app.MESSAGE
                font_size: '40sp'
                color: app.FONT_COLOR
                
        PixelImage:
            source: 'images/Box_S.png'
            size_hint: None, 1
            keep_ratio: False
    GridLayout:
        cols: 3
        size_hint_y: None
        height: 5 * app.PIXEL_SIZE
        PixelImage:
            source: 'images/Box_BL.png'
            size_hint: None, None
        PixelImage:
            source: 'images/Box_B.png'
            size_hint: 1, None
            keep_ratio: False
        PixelImage:
            source: 'images/Box_BR.png'
            size_hint: None, None
<Main>:
    BoxLayout:
        canvas.before:
            Color:
                rgba: app.BACK_COLOR
            Rectangle:
                pos: self.pos
                size: self.size
        orientation: 'vertical'
        WeatherBox:
            size_hint: 1, 1
        ClockBox:
            size_hint: 1, 0.2
        BottomBox:
            size_hint: 1, 0.2
